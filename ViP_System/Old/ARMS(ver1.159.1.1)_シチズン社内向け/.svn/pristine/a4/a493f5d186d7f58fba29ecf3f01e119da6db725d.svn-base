<Window x:Class="ArmsWorkTransparency.Views.V04_LotMonitorSetting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArmsWorkTransparency.Views"
        xmlns:common="clr-namespace:ArmsWorkTransparency.Common"
        mc:Ignorable="d"
        Title="LAMS V04_ロット進捗表示条件設定画面" Height="640" Width="1032" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="341*"/>
            <ColumnDefinition Width="491*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lbCurrentProc" Margin="296,32,454,10" ItemsSource="{Binding CurrentProcList}" Selector.IsSelected="{Binding IsSelected}" SelectionMode="Multiple" Grid.ColumnSpan="2">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock><Run Text="{Binding No}"/><Run Text=":"/><Run Text="{Binding Name}"/></TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="IsSelected" Value="{Binding Mode=TwoWay, Path=IsSelected}"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <Label x:Name="label" Content="現在工程条件" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="296,5,0,0" Grid.ColumnSpan="2"/>
        <ListBox x:Name="lbNextProc" Margin="156,32,176,10" ItemsSource="{Binding NextProcList}" Selector.IsSelected="{Binding IsSelected}" SelectionMode="Multiple" Grid.Column="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock><Run Text="{Binding No}"/><Run Text=":"/><Run Text="{Binding Name}"/></TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="IsSelected" Value="{Binding Mode=TwoWay, Path=IsSelected}"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <Label x:Name="label_Copy" Content="受取工程条件" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="156,5,0,0" Grid.Column="1"/>
        <Button x:Name="btnSaveSetting" Content="設定" Margin="0,0,10,10" Height="29" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Grid.Column="1" Click="btnSaveSetting_Click"/>
        <TextBox x:Name="tbUpdateInterval" HorizontalAlignment="Left" Height="36" Margin="555,38,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="39" HorizontalContentAlignment="Right" FontSize="20" VerticalContentAlignment="Center" Grid.Column="1"/>
        <Label x:Name="label_Copy1" Content="更新時間(分)" HorizontalAlignment="Left" Margin="456,5,0,0" VerticalAlignment="Top" Height="30" FontSize="24" VerticalContentAlignment="Center" Grid.Column="1"/>
        <ListBox x:Name="lbSearchType" Margin="8,78,136,280" ItemsSource="{Binding SearchTypeList}" SelectionMode="Multiple">

            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <Label x:Name="label_Copy2" Content="選択型番" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,5,0,0"/>
        <ListBox x:Name="lbType" Margin="8,373,136,7" Selector.IsSelected="{Binding IsSelected}" SelectionMode="Multiple">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <TextBox x:Name="tbSearchType" HorizontalAlignment="Left" Height="38" Margin="8,35,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="276" FontSize="24" KeyDown="tbSearchType_KeyDown"/>
        <Button x:Name="btnAdd" Content="追加" HorizontalAlignment="Left" Margin="157,339,0,0" VerticalAlignment="Top" Width="61" Click="btnAdd_Click"/>
        <Button x:Name="btnDelete" Content="削除" HorizontalAlignment="Left" Margin="223,339,0,0" VerticalAlignment="Top" Width="61" Click="btnDelete_Click"/>
        <CheckBox x:Name="cbResingroupVisible" Content="樹脂ｸﾞﾙｰﾌﾟ" HorizontalAlignment="Left" Margin="437,133,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="-0.602,0.828" Grid.Column="1"/>
        <CheckBox x:Name="cbSupplyIdVisible" Content="供給ID" HorizontalAlignment="Left" Margin="437,163,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="-0.602,0.828" Grid.Column="1"/>
        <CheckBox x:Name="cbBlendCdVisible" Content="ﾌﾞﾚﾝﾄﾞCD" HorizontalAlignment="Left" Margin="437,193,0,0" VerticalAlignment="Top" FontSize="20" Grid.Column="1"/>
        <CheckBox x:Name="cbMagazineNVisible" Content="ﾏｶﾞｼﾞﾝ" HorizontalAlignment="Left" Margin="437,223,0,0" VerticalAlignment="Top" FontSize="20" Grid.Column="1"/>
        <CheckBox x:Name="cbDBThrowDtVisible" Content="ﾀﾞｲﾎﾞﾝﾄﾞ投入日" HorizontalAlignment="Left" Margin="437,253,0,0" VerticalAlignment="Top" FontSize="20" Grid.Column="1"/>
        <CheckBox x:Name="cbAimRankVisible" Content="狙いﾗﾝｸ" HorizontalAlignment="Left" Margin="437,283,0,0" VerticalAlignment="Top" FontSize="20" Grid.Column="1"/>
        <CheckBox x:Name="cbPhosphorSheetMatCdVisible" Content="蛍光体ﾌﾞﾛｯｸ" HorizontalAlignment="Left" Margin="437,313,0,0" VerticalAlignment="Top" FontSize="20" Grid.Column="1"/>
        <CheckBox x:Name="cbNextLineVisible" Content="次ﾗｲﾝ" HorizontalAlignment="Left" Margin="437,343,0,0" VerticalAlignment="Top" FontSize="20" Grid.Column="1"/>
        <CheckBox x:Name="cbReachingDateVisible" Content="到達予定(日時)" HorizontalAlignment="Left" Margin="437,373,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="-0.602,0.828" Grid.Column="1"/>
        <CheckBox x:Name="cbReachingMinutesVisible" Content="到達予定(分)" HorizontalAlignment="Left" Margin="437,403,0,0" VerticalAlignment="Top" FontSize="20" RenderTransformOrigin="-0.602,0.828" Grid.Column="1"/>
        <Label x:Name="label_Copy3" Content="表示列設定" HorizontalAlignment="Left" Margin="456,96,0,0" VerticalAlignment="Top" Height="30" FontSize="24" VerticalContentAlignment="Center" Grid.Column="1"/>
        <Button x:Name="btnAllSelect" Content="全選択" HorizontalAlignment="Left" Margin="8,339,0,0" VerticalAlignment="Top" Width="68" Click="btnAllSelect_Click" />
        <Button x:Name="btnAllDeSelect" Content="全解除" HorizontalAlignment="Left" Margin="81,339,0,0" VerticalAlignment="Top" Width="68" Click="btnAllDeSelect_Click" />
    </Grid>
</Window>
