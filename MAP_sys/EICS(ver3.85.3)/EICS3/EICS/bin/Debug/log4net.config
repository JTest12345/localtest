<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="System.Configuration.IgnoreSectionHandler"/>
  </configSections>

  <log4net>
    <!-- コンソール出力用 -->
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d,%-5p,-,%m%n"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="FATAL" />
      </filter>
    </appender>

    <!-- メッセージボックス出力用 -->
    <appender name="MessageBoxAppender" type="log4netHelper.MessageBoxAppender">
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d,%-5p,-,%m%n"/>
      </layout>
      <filter type="log4net.Filter.DenyAllFilter" />
      <!--<filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="INFO" />
        <levelMax value="FATAL" />
      </filter>-->
    </appender>

    <!-- トレースウィンドウ出力用 -->
    <appender name="TraceAppender" type="log4net.Appender.TraceAppender">
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d,%-5p,-,%m%n"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="FATAL" />
        <levelMax value="FATAL" />
      </filter>
    </appender>
    
    <!-- ログファイル出力用(日付またはファイルのサイズ制約に基づいた多数のログを生成) -->
    <appender name="RollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <param name="File" value="C:\QCIL\Log\MyApp" />
      <param name="AppendToFile" value="true" />
      <param name="RollingStyle" value="Date" />
      <param name="MaxSizeRollBackups" value="2" />
      <param name="StaticLogFileName" value="false" />
      <param name="DatePattern" value='"."yyyy-MM-dd".log"' />
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d %-5p - %m%n" />
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="DEBUG" />
        <levelMax value="FATAL" />
      </filter>
    </appender>

    <!-- メール送信用 -->
    <appender name="SMTPAppender" type="log4net.Appender.SMTPAppender">
      <param name="From" value="LOG4NET&lt;automail@sl13.nichia.co.jp&gt;"/>
      <param name="To" value="haruhisa.ishiguchi@nichia.co.jp,hiroki.shinomiya@nichia.co.jp,motoaki.yuasa@nichia.co.jp,naohito.yoshimoto@nichia.co.jp, kei.nagao@nichia.co.jp"/>
      <param name="Subject" value="EICS3装置監視"/>
      <param name="SMTPHost" value="HQSMTP1.nichia.local"/>
      <layout type="log4net.Layout.PatternLayout">
        <param name="ConversionPattern" value="%d,%-5p,-,%m%n"/>
      </layout>
      <param name="Priority" value="High"/>
      <evaluator type="log4net.Core.LevelEvaluator">
        <threshold value="ERROR"/>
      </evaluator>
      <!-- どのレベルでもメール送信しない -->
      <!--<filter type="log4net.Filter.DenyAllFilter" />  System.Net.Mail.MailPriority.-->
       <filter type="log4net.Filter.LevelRangeFilter">
        <levelMin value="ERROR" />
        <levelMax value="FATAL" />
      </filter> 
    </appender>

    <!-- Setup the root category, add the appenders and set the default level -->

    <root>
      <level value="DEBUG"/>
      <appender-ref ref="RollingFileAppender"/>
      <appender-ref ref="SMTPAppender"/>
    </root>

    <logger name="MESSAGEBOXLOG">
      <level value="DEBUG"/>
      <appender-ref ref="MessageBoxAppender"/>
    </logger>

    <logger name="FILELOG">
      <level value="DEBUG"/>
      <appender-ref ref="RollingLogFileAppender"/>
    </logger>

    <logger name="CONSOLELOG">
      <level value="DEBUG"/>
      <appender-ref ref="ConsoleAppender"/>
      <appender-ref ref="TraceAppender"/>
    </logger>

    <logger name="SMTPLOG">
      <level value="ERROR"/>
      <appender-ref ref="SMTPAppender"/>
    </logger>

  </log4net>
</configuration>