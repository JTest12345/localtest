@using ArmsApi.Model
@model ArmsWeb.Models.CutBlendModel
@{
    ViewBag.Title = "Finish";
}

<h3>カットブレンド完了</h3>
<h3>@Html.Raw(Model.Comment)</h3>
<h3>設備：@Model.PlantCd</h3>
<h3>作業者：@Model.EmpCd</h3>
<h3>ロット：@Model.BlendLotNo</h3>
<h3>完成数：@Model.TotalQty</h3>
<h3>不良数：@Model.DefQty</h3>
<h3>抜き取り数：@Model.TestQty</h3>

<p>
    <button onclick="location.href='@Url.Action("InputDefect")';return false;">検査入力画面へ</button>
</p>

<p>
    <button onclick="location.href='@Url.Action("PrintLabel")';return false;">ラベル印字</button>
</p>

@using (Html.BeginForm())
{
    if (@Model.WorkUnitId != null)
    {
        <p>帳票は下記のリンクから入力開始してください</p>

        var url = @Model.URL;
        <div>
            <a href=@url target="_blank" rel="noopener noreferrer">
                帳票へのリンク
            </a>
        </div>
    }
}





